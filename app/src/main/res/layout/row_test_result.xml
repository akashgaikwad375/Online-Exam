<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_root"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Date: "
            android:textColor="@color/sign_in_button_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Test name: "
            android:textColor="@color/sign_in_button_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_date"/>

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Sdc"
            android:textColor="@color/sign_in_button_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/txt_test_name"
            app:layout_constraintTop_toBottomOf="@id/txt_date"/>

        <TextView
            android:id="@+id/txt_total_attempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Questions solved: "
            android:textColor="@color/sign_in_button_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_name" />

        <TextView
            android:id="@+id/txt_attempted_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/sign_in_button_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/txt_total_attempt"
            app:layout_constraintTop_toTopOf="@id/txt_total_attempt" />

        <TextView
            android:id="@+id/txt_correct_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Marks: "
            android:layout_marginLeft="30dp"
            android:textColor="@color/sign_in_button_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/txt_attempted_count"
            app:layout_constraintTop_toBottomOf="@id/txt_name" />

        <TextView
            android:id="@+id/txt_ans_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/30"
            android:textColor="@color/sign_in_button_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/txt_correct_ans"
            app:layout_constraintTop_toTopOf="@id/txt_correct_ans" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>