<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_forgot_password_background">

    <TextView
        android:id="@+id/txt_enter_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Enter email"
        android:textColor="@color/sign_in_button_color"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/edt_enter_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_enter_email"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/dialog_emailid_background"
        android:ems="10"
        android:textColor="@color/sign_in_button_color"
        android:textColorHint="@color/sign_in_button_color"
        android:hint="Email id"
        android:inputType="textEmailAddress" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_below="@id/edt_enter_email"
        android:background="@color/sign_in_button_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_divider"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Cancel"
            android:background="@android:color/transparent"
            android:textColor="@color/sign_in_button_color"/>

        <View
            android:layout_width="0.8dp"
            android:layout_height="40dp"
            android:background="@color/sign_in_button_color" />

        <Button
            android:id="@+id/btn_ok"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="Ok"
            android:background="@android:color/transparent"
            android:textColor="@color/sign_in_button_color" />
    </LinearLayout>
</RelativeLayout>