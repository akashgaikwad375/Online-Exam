<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:elevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_root"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_question_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="1. "
            android:textColor="@color/sign_in_button_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Sdc"
            android:textColor="@color/sign_in_button_color"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@id/txt_question_no"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rg_options"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_question">

            <RadioButton
                android:id="@+id/rbtn_option1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/sign_in_button_color"
                android:tag="1"
                android:text="Option 1"
                android:textColor="@color/sign_in_button_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbtn_option2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/sign_in_button_color"
                android:tag="2"
                android:text="Option 2"
                android:textColor="@color/sign_in_button_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbtn_option3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/sign_in_button_color"
                android:tag="3"
                android:text="Option 3"
                android:textColor="@color/sign_in_button_color"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/rbtn_option4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/sign_in_button_color"
                android:tag="4"
                android:text="Option 4"
                android:textColor="@color/sign_in_button_color"
                android:textSize="14sp" />
        </RadioGroup>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>